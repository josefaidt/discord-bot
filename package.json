{
  "name": "@aws-amplify/discord-bot",
  "type": "module",
  "version": "0.8.0-next.3",
  "license": "Apache-2.0",
  "private": true,
  "scripts": {
    "packages": "pnpm --filter \"./packages/**\"",
    "dev": "turbo run dev",
    "docker": "PNPM_STORE=$(pnpm store path) docker compose up --build",
    "build": "turbo run build",
    "check": "prettier --check .",
    "lint": "eslint .",
    "setup": "pnpm install && pnpm build && pnpm setup-test",
    "setup-dev": "echo \"\nPNPM_STORE\"=$(pnpm store path) >> .env",
    "setup-test": "DATABASE_URL=\"file:data/test.db\" prisma db push && vite build",
    "test": "turbo run test"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@faker-js/faker": "^7.3.0",
    "@hey-amplify/scripts": "workspace:*",
    "@hey-amplify/support": "workspace:*",
    "@hey-amplify/tsconfig": "workspace:*",
    "@hey-amplify/vite-plugin-server": "workspace:*",
    "@types/cookie": "^0.5.1",
    "@types/express": "^4.17.13",
    "@types/node": "^18.7.13",
    "@types/prettier": "^2.7.0",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "@typescript-eslint/parser": "^5.35.1",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "jsdom": "^20.0.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "prettier-plugin-svelte": "^2.7.0",
    "supertest": "^6.2.4",
    "svelte": "^3.50.1",
    "turbo": "^1.5.4",
    "typescript": "^4.7.4",
    "vite-node": "^0.22.1"
  },
  "prettier": {
    "tabWidth": 2,
    "bracketSpacing": true,
    "singleQuote": true,
    "printWidth": 80,
    "useTabs": false,
    "semi": false,
    "svelteSortOrder": "options-scripts-markup-styles",
    "svelteStrictMode": true,
    "svelteAllowShorthand": false,
    "plugins": [
      "./node_modules/prettier-plugin-svelte"
    ]
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "eslint:recommended",
      "prettier",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "env": {
      "browser": true,
      "node": true
    },
    "plugins": [
      "svelte3",
      "@typescript-eslint"
    ],
    "ignorePatterns": [
      "*.cjs",
      "cdk/cdk.out/",
      "build/"
    ],
    "overrides": [
      {
        "files": [
          "*.svelte"
        ],
        "processor": "svelte3/svelte3"
      }
    ],
    "settings": {
      "svelte3/typescript": true
    },
    "rules": {
      "@typescript-eslint/prefer-ts-expect-error": "warn",
      "@typescript-eslint/no-non-null-assertion": "off"
    }
  },
  "packageManager": "pnpm@7.9.5",
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "react",
        "react-dom",
        "sass",
        "next"
      ]
    },
    "patchedDependencies": {
      "@aws-sdk/util-user-agent-node@3.127.0": "patches/@aws-sdk__util-user-agent-node@3.127.0.patch"
    }
  },
  "lint-staged": {
    "*.(ts|js|svelte)": [
      "prettier --list-different",
      "eslint"
    ],
    "*.(md|yaml|graphql,json)": "prettier --list-different"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        72
      ],
      "body-max-line-length": [
        2,
        "always",
        80
      ],
      "scope-case": [
        0,
        "always",
        "lower-case"
      ],
      "type-enum": [
        2,
        "always",
        [
          "build",
          "ci",
          "chore",
          "docs",
          "feat",
          "fix",
          "test",
          "style",
          "release"
        ]
      ]
    }
  }
}
